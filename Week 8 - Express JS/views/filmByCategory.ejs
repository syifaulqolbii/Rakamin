<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Film By Category</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<h1>Film By Category</h1>
<h2>Category: <%= categoryById.name %></h2>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Release Year</th>
        <th>Rate</th>
    </tr>
    <% filmsInCategory.forEach(function(filmsInCategory) { %>
        <tr>
            <td><%= filmsInCategory.title %></td>
            <td><%= filmsInCategory.description %></td>
            <td><%= filmsInCategory.release_year %></td>
            <td><%= filmsInCategory.rate %></td>
        </tr>
    <% }); %>
</table>
<a href="/categories">Back to All Category</a>
</body>
</html>
